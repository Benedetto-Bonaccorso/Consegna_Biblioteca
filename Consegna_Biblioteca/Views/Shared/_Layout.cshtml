<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>

<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black">
        <div class="container">
            <a href="/Documento/Galleria">
                <img src="~/Content/img/Thoth's Grimoire banner.png" alt="Logo Thoth's Grimoire" class="big-logo m-0" />
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Attiva/Disattiva spostamento" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Informazioni Prestiti", "InformazioniPrestiti", "Documento", new { area = "" }, new { @class = "mynav-link" })</li>
                            <li>@Html.ActionLink("Documenti", "Index", "Documento", new { area = "" }, new { @class = "mynav-link" })</li>
                            <li>@Html.ActionLink("Prestiti", "Prestiti", "Documento", new { area = "" }, new { @class = "mynav-link" })</li>
                            <li>@Html.ActionLink("Tipi", "Index", "Tipo", new { area = "" }, new { @class = "mynav-link" })</li>
                            <li>@Html.ActionLink("Settori", "Index", "Settore", new { area = "" }, new { @class = "mynav-link" })</li>
                        }
                        else if (User.IsInRole("User"))
                        {
                            <li>@Html.ActionLink("Galleria", "Galleria", "Documento", new { area = "" }, new { @class = "mynav-link" })</li>
                        }
                        <li>@Html.ActionLink("Logout", "SignOut", "Utente", new { area = "" }, new { @class = "mynav-link" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Registrati", "Registrazione", "Utente", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Log in", "LogInUtente", "Utente", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Applicazione ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<style>

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    img{
        max-width: 100%;
    }

    :root {
        --Purple-Main: #8B53FF;
        --Bg-Base: #1f005f;
        --Table-1: #1b0151;
        --Table-2: #220068;
    }

    body{
        background-color: var(--Bg-Base);
    }

    .LinkAzione {
        background-color: var(--Purple-Main);
        color: white;
        text-decoration: none;
        padding: 0.5rem;
    }

    .LinkAzione:hover{
        color:black;
    }

    .big-logo{
        height:6rem;

    }

    .ListImg {
        width: 6rem;
        height: 6rem;
    }

    table {
        border: 4px double var(--Purple-Main) !important;

    }

    tr:nth-child(even) {
        background-color: var(--Table-1);
    }

    tr:nth-child(odd){
        background-color: var(--Table-2);
    }


    td {
        max-width: 10vw;
        overflow: hidden;
        color: white;
    }

    th {
        text-overflow: ellipsis;
        overflow: hidden;
        color: white;
    }

    h2,h3,h4 {
        color: var(--Purple-Main)
    }

    p{
        color:white;
    }
    
    label{
        color:white;
    }

    .mynav-link {
        transition: 0.3s;
        color: var(--Purple-Main);
        text-decoration: none;
        padding: 0.5rem;
        margin: 0.5rem 1rem;
    }

    .mynav-link:hover {
        transition: 0.3s;
        background-color: var(--Purple-Main);
        color: black;
    }

    .output-ajax{
        background-color:var(--Purple-Main);
        color:black;
        padding:1rem 2rem;
        margin:1rem 0;
    }
</style>